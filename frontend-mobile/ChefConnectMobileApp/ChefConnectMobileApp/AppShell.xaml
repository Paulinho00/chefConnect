<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChefConnectMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ChefConnectMobileApp"
    Shell.FlyoutBehavior="Disabled"
    Title="ChefConnectMobileApp">
    <Shell.BackgroundColor>Chocolate</Shell.BackgroundColor>
    <Shell.TitleView>
        <Grid Margin="10, 10, 10, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" VerticalOptions="Center">ChefConnect</Label>
            <Button Grid.Column="1" Text="Rejestracja" HeightRequest="50" WidthRequest="100" HorizontalOptions="End" BackgroundColor="White"></Button>
            <Button Grid.Column="2" Text="Logowanie" HeightRequest="50" WidthRequest="100" HorizontalOptions="End" BackgroundColor="White"></Button>
        </Grid>
    </Shell.TitleView>
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
